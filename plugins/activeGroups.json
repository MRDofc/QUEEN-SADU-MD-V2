// JSON file path
const groupsFile = path.join(__dirname, 'activeGroups.json');

// load existing groups or initialize
let activeGroups = {};
if (fs.existsSync(groupsFile)) {
  activeGroups = JSON.parse(fs.readFileSync(groupsFile, 'utf-8'));
}

// add the group JID
const groupJid = "120363021938526250@g.us";
activeGroups[groupJid] = true;

// save back to file
fs.writeFileSync(groupsFile, JSON.stringify(activeGroups, null, 2));

